{
  "compilerOptions": {
    "strict": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "es2022",
      "DOM"
    ],
    "rootDir": "src",
    "outDir": "build"
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.ts",
    "client/client.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}