{
  "name": "spin-docker-c",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "rimraf build build-wasm",
    "build-cpp": "./build.sh -f",
    "build-docker-native": "docker build -f ./native.dockerfile -t docker.io/hpccjs/llama2:latest .",
    "build-docker-wasm": "docker build -f ./wasm.dockerfile --platform wasi/wasm --provenance=false -t docker.io/hpccjs/llama2-wasm:latest .",
    "build-docker": "run-s build-docker-native build-docker-wasm",
    "build": "run-s build-cpp build-docker",
    "run-docker-native": "docker run -i --rm -v $(pwd):/wf docker.io/hpccjs/llama2:latest model.bin",
    "run-docker-wasm": "docker run -i --rm -v $(pwd):/wf --runtime=io.containerd.wasmtime.v1 --platform=wasi/wasm docker.io/hpccjs/llama2-wasm:latest model.bin",
    "run-native": "./build/llama2 model.bin",
    "run-wasm": "wasmtime --dir . ./build-wasm/llama2.wasm ./model.bin"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "rimraf": "5.0.1"
  },
  "dependencies": {}
}