{
  "name": "hpcc-wasm",
  "version": "0.0.0",
  "description": "Wasm musings and experiments",
  "scripts": {
    "configure": "cmake -S . -B ./build -G Ninja",
    "build-fastly": "npm run --prefix fastly/typescript build",
    "build-root": "cmake --build ./build --parallel",
    "build-docker-native": "docker build -f ./dockerfiles/native.dockerfile -t sieve ./build/guest/cpp/native/sieve",
    "build-docker-wasm": "docker buildx build --platform wasi/wasm -f ./dockerfiles/wasm.dockerfile -t sieve-wasm ./build/guest/cpp/wasi-sdk/src/wasi-sdk-build/sieve",
    "build": "run-p build-root build-docker-native build-docker-wasm",
    "clean-fastly": "npm run --prefix fastly/typescript clean",
    "clean-root": "rimraf ./build",
    "clean": "run-p clean-root",
    "run-docker": "docker run --rm sieve",
    "run-docker-wasm": "docker run --rm --runtime=io.containerd.wasmedge.v1 --platform=wasi/wasm sieve-wasm",
    "install": "./scripts/install.sh",
    "uninstall": "rimraf ./emsdk ./javy ./wasi-sdk-* ./wasmtime ./wit-bindgen"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1"
  }
}